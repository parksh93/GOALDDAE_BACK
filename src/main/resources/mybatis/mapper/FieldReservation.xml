<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goalddae.repository.FieldReservationRepository">
    <update id="createFieldReservationTable" parameterType="java.lang.Long">
        CREATE TABLE field_reservation_#{id} (
                                             id BIGINT AUTO_INCREMENT PRIMARY KEY,
                                             reservation_date DATETIME NOT NULL,
                                             reserved_date BIGINT NOT NULL,
                                             reservation_time BIGINT NOT NULL,
                                             reservation_team_id BIGINT NULL,
                                             user_id BiGNT NOT NULL,
                                             soccer_field_id BIGINT NOT NULL
        );
    </update>

    <!-- 동적 테이블 삭제 쿼리 -->
    <delete id="dropFieldReservationTable" parameterType="java.lang.Long">
        DROP TABLE IF EXISTS field_reservation_#{id}
    </delete>
</mapper>
